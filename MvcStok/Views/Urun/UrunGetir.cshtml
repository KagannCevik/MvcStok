        <br />
        @Html.LabelFor(x => x.URUNFIYAT)
        @Html.TextBoxFor(x => x.URUNFIYAT, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.URUNSTOK)
        @Html.TextBoxFor(x => x.URUNSTOK, new { @class = "form-control" })
    </div>

    <div>
        <button class="btn btn-warning">Ürün Güncelle</button>
    </div>


}

